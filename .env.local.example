# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

AIRTABLE_API_KEY="change to your Airtable API key here"

# YouTube Analytics Airtable Base (NEXT_PUBLIC_ prefix needed for client-side access)
NEXT_PUBLIC_YOUTUBE_ANALYTICS_BASE_ID="change to your Airtable Base ID here"
NEXT_PUBLIC_YOUTUBE_ANALYTICS_TABLE_ID="change to your Airtable Table ID here"

# Image Generation Airtalbe Base 
NEXT_PUBLIC_IMAGE_GENERATION_BASE_ID="change to your Airtable Base ID here"

# n8n Webhook URL for YouTube scraping (NEXT_PUBLIC_ prefix needed for client-side access)
NEXT_PUBLIC_N8N_WEBHOOK_URL="change to your n8n Webhook URL here"

# n8n Webhook URL for creating video titles (NEXT_PUBLIC_ prefix needed for client-side access)
NEXT_PUBLIC_N8N_CREATE_TITLE_WEBHOOK_URL="change to your n8n Create Title Webhook URL here"

# n8n Webhook URL for summarizing videos (NEXT_PUBLIC_ prefix needed for client-side access)
NEXT_PUBLIC_N8N_SUMMARY_WEBHOOK_URL=你的n8n_webhook_url

# n8n Webhook URL for generating thumbnails (NEXT_PUBLIC_ prefix needed for client-side access)
NEXT_PUBLIC_N8N_GENERATE_THUMBNAIL_WEBHOOK_URL="change to your n8n Generate Thumbnail Webhook URL here"

# Supabase Configuration
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Optional: Enable debug logging for auth (development only)
NEXT_PUBLIC_SUPABASE_DEBUG=false

YOUTUBE_API_KEY=your_youtube_data_api_key